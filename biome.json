{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    // "includes": [
    //   "**/src/**/*",
    //   "**/.vscode/**/*",
    //   "**/index.html",
    //   "**/vite.config.js",
    //   "!**/src/routeTree.gen.ts",
    //   "!**/src/styles.css"
    // ]
  },
  "formatter": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "info"
      },
      "a11y": "info"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double"
    }
  }
}
